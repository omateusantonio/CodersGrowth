<mvc:View
    controllerName="ui5.controledeanimaissilvestres.controller.TabelaAnimaisSilvestres"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Panel
        headerText="{i18n>helloPanelTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <Button
                text="{i18n>botao}"
                press=".onShowHello"
                class="sapUiSmallMarginEnd"
            />
            <Input
                value="{/recipient/name}"
                description="Ola {/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
            />
            <Text
                text="{/recipient/name}"
                class="sapUiSmallMargin"
            />
            <FormattedText
                htmlText="grito: {/recipient/name}"
                class="sapUiSmallMargin sapThemeHighlight-asColor"
            />
        </content>
    </Panel>
</mvc:View>
