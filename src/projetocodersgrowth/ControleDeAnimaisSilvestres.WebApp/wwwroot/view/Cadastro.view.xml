<mvc:View
    controllerName="ui5.controledeanimaissilvestres.controller.Cadastro"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">

    <Shell>
        <Page
            showHeader="true"
            title="{i18n>tituloPaginaDeCadastro}"
            showNavButton="true"
            navButtonTooltip="Retornar"
            navButtonPress=".aoClicarEmVoltar">
            <headerContent>
                <Button
                    text="Cancelar"
                    iconFirst="true"
                    icon="sap-icon://cancel"
                    press=".aoClicarEmCancelar"
                    type="Transparent"
                    width="7rem"
                />
                <Button
                    text="Salvar"
                    iconFirst="true"
                    icon="sap-icon://save"
                    type="Transparent"
                    width="7rem"
                    press=".aoClicarEmSalvar"
                />
            </headerContent>

            <layout:VerticalLayout 
                class="sapUiContentPadding"
                width="100%"
                >
                <HBox width="100%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="Nome do animal"
                            labelFor="inputNomeDoAnimal"
                            design="Bold"/>
                        <Input 
                            id="inputNomeDoAnimal"
                            required="true"/>
                    </VBox>
                    <VBox width="40%">
                        <Label 
                            text="Nome da espécie"
                            labelFor="inputNomeDaEspecie"
                            design="Bold"
                            showColon="true"/>
                        <Input 
                            id="inputNomeDaEspecie"
                            required="true"/>
                    </VBox>
                </HBox>

                <HBox width="100%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="Classe de animal"
                            labelFor="inputClasseDeAnimal"
                            design="Bold"/>
                        <ComboBox 
                            id="inputClasseDeAnimal" 
                            items="{path: '/listaDeClasses'}" 
                            required="true"
                            width="100%">
                                <core:Item text="{Classe}"/>
                        </ComboBox>
                    </VBox>
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="Preço da vacinação"
                            labelFor="inputPrecoDaVacinacao"
                            design="Bold"/>
                        <Input
                            id="inputPrecoDaVacinacao" 
                            required="true"/>
                    </VBox>
                </HBox>

                <HBox width="100%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="Data do resgate"
                            labelFor="inputDataDoResgate"
                            design="Bold"/>
                        <DatePicker 
                            id="inputDataDoResgate"
                            displayFormat="dd/MM/yyyy"
                            required="true"/>
                    </VBox>
                    <VBox width="40%">
                        <CheckBox text="Em extinção?" id="inputEmExtincao" class="sapUiSmallMarginTop"/>
                    </VBox>
                </HBox>
                
