<mvc:View
    controllerName="ui5.controledeanimaissilvestres.controller.Cadastro"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">

    <Shell>
        <Page
            showHeader="true"
            title="{i18n>tituloPaginaDeCadastro}"
            showNavButton="true"
            navButtonTooltip="Retornar"
            navButtonPress=".aoClicarEmVoltar">
            <headerContent>
                <Button
                    text="Cancelar"
                    iconFirst="true"
                    icon="sap-icon://cancel"
                    press=".aoClicarEmCancelar"
                    type="Transparent"
                    width="7rem"
                />
                <Button
                    text="Salvar"
                    iconFirst="true"
                    icon="sap-icon://save"
                    type="Transparent"
                    width="7rem"
                    press=".aoClicarEmSalvar"
                />
            </headerContent>

            <layout:VerticalLayout 
                id="formularioDeCadastro"
                class="sapUiContentPadding"
                width="100%"
                >
                <HBox width="100%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="{i18n>nomeDoAnimal}"
                            labelFor="inputNomeDoAnimal"
                            design="Bold"/>
                        <Input 
                            id="inputNomeDoAnimal"
                            required="true"
                            value="{animalSilvestre>/nomeDoAnimal}"/>
                    </VBox>
                    <VBox width="40%">
                        <Label 
                            text="{i18n>nomeDaEspecie}"
                            labelFor="inputNomeDaEspecie"
                            design="Bold"
                            showColon="true"/>
                        <Input 
                            id="inputNomeDaEspecie"
                            required="true"
                            value="{animalSilvestre>/nomeDaEspecie}"/>
                    </VBox>
                </HBox>

                <HBox width="100%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="{i18n>classe}"
                            labelFor="inputClasseDeAnimal"
                            design="Bold"/>
                        <ComboBox 
                            id="inputClasseDeAnimal" 
                            items="{classes>/}" 
                            required="true"
                            width="100%"
                            selectedKey="{animalSilvestre>/classe}">
                                <core:Item text="{classes>Classe}" key="{classes>Chave}"/>
                        </ComboBox>
                    </VBox>
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="{i18n>custoDeVacinacao}"
                            labelFor="inputPrecoDaVacinacao"
                            design="Bold"/>
                        <Input
                            id="inputPrecoDaVacinacao" 
                            required="true"
                            value="{animalSilvestre>/custoDeVacinacao}"/>
                    </VBox>
                </HBox>

                <HBox width="100%" justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox width="40%">
                        <Label 
                            showColon="true"
                            text="{i18n>dataDoResgate}"
                            labelFor="inputDataDoResgate"
                            design="Bold"/>
                        <DatePicker 
                            id="inputDataDoResgate"
                            displayFormat="dd/MM/yyyy"
                            required="true"
                            value="{animalSilvestre>/dataDoResgate}"/>
                    </VBox>
                    <VBox width="40%">
                        <CheckBox text="{i18n>emExtincao}" id="inputEmExtincao" class="sapUiSmallMarginTop" selected="{animalSilvestre>/emExtincao}"/>
                    </VBox>
                </HBox>
            </layout:VerticalLayout>
        </Page>
    </Shell>

</mvc:View>